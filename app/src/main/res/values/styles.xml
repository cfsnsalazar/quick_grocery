        <item name="widgetBackground">@color/dark</item>
        <item name="colorPrimaryDark">@color/dark</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/light</item>
        <item name="rippleBackground">@drawable/ripple_effect_dark</item>
        <item name="drawerIconColor">@color/drawer_selector_icon_dark</item>
