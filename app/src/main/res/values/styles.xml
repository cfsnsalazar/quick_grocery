<resources>

    <style name="LightTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/green</item>
        <item name="mainBackground">@color/white</item>
        <item name="widgetBackground">@color/light</item>
        <item name="colorPrimaryDark">@color/light</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorSecondary">@color/medium</item>
        <item name="rippleBackground">@drawable/ripple_effect_light</item>
        <item name="drawerIconColor">@color/drawer_selector_icon_light</item>
        <item name="drawerTextColor">@color/drawer_selector_text_light</item>
        <item name="spinnerBackground">@drawable/spinner_background_light</item>
        <item name="switchColor">@color/switch_color_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="splashLogo">@drawable/ic_logo_light</item>
        <item name="poweredByLogo">@drawable/ic_powered_by_fatsecret_light</item>
    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">@color/green</item>
        <item name="mainBackground">@color/black</item>
        <item name="widgetBackground">@color/dark</item>
        <item name="colorPrimaryDark">@color/dark</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/light</item>
        <item name="spinnerBackground">@drawable/spinner_background_dark</item>
        <item name="rippleBackground">@drawable/ripple_effect_dark</item>
        <item name="drawerIconColor">@color/drawer_selector_icon_dark</item>
        <item name="drawerTextColor">@color/drawer_selector_text_dark</item>
        <item name="switchColor">@color/switch_color_dark</item>
        <item name="splashLogo">@drawable/ic_logo_dark</item>
        <item name="poweredByLogo">@drawable/ic_powered_by_fatsecret_dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="NavigationTheme">
        <item name="listPreferredItemHeightSmall">56dp</item>
    </style>

</resources>
