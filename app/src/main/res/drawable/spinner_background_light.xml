<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/light"/>
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:gravity="center_vertical|right" android:right="8dp">
        <layer-list>
            <item android:width="8dp" android:height="8dp"  android:gravity="center" android:bottom="8dp">
                <rotate
                    android:fromDegrees="45"
                    android:toDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/medium" />
                        <stroke android:color="@color/medium" android:width="1dp"/>
                    </shape>
                </rotate>
            </item>
            <item android:width="16dp" android:height="8dp" android:bottom="16dp" android:gravity="center">
                <shape android:shape="rectangle">
                    <solid android:color="@color/light"/>
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>